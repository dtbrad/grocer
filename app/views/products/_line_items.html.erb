<table class="table">
  <thead>
    <tr class="fake-link">
      <th><%= sort_record_by("date_purchased", "Date Purchased") %></th>
      <th><%= sort_record_by("price_cents", "Price") %></th>
      <th><%= sort_record_by("qty_purchased", "Qty Purchased") %></th>
      <th><%= sort_record_by("weight") %></th>
      <th><%= sort_record_by("total_cents", "Total Price") %></th>
    </tr>
  </thead>
  <tbody>
    <% line_items.each do |line_item| %>
      <tr>
        <td> <%= link_to format_date(line_item.basket.date), basket_path(line_item.basket) %> </td>
        <td> <%= number_to_currency(line_item.price) %> </td>
        <td> <%= line_item.quantity %> </td>
        <td> <%= line_item.formatted_weight %> </td>
        <td> <%= number_to_currency(line_item.total) %> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="text-center">
  <%= paginate line_items, remote: true %>
</div>
