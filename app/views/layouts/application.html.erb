<!DOCTYPE html>
<html>
  <head>
    <title>New Seasons Purchase Tracker</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div class="container">
      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <!-- Brand and toggle get grouped for better mobile display -->
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <%= link_to "Grocer", welcome_path, class: "navbar-brand" %>
          </div>

          <!-- Collect the nav links, forms, and other content for toggling -->
          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
              <% if current_user %>
              <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Shopping Lists <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><%= link_to "Make a Shopping List", listmaker_path %></li>
            <li><a href="/listmaker/lists">See previous lists</a></li>
          </ul>
        </li>
        <li><%= link_to "Import your purchase history", new_basket_path, remote: true %></li>
              <% end %>
              <% if current_user && current_user.baskets.length > 0 %>
                <li><%= link_to "Purchase history", baskets_path %></li>
                <li><%= link_to "Products", products_path %></li>
              <% end %>
            </ul>
            <ul class="nav navbar-nav navbar-right">
              <% if current_user && current_user.admin? %>
                <li><%= link_to "Admin Page", nick_name_requests_path %></li>
              <% end %>
              <% if current_user %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" >Signed in as: <%= current_user.name %><span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Sign out", destroy_user_session_path, method: "delete"  %></li>
                </ul>
              </li>
              <% else %>
                <li><%= link_to "Sign in", new_user_session_path %></li>
                <li><%= link_to "Sign up", new_user_registration_path %></li>
              <% end %>
            </ul>
          </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
      </nav>

      <% unless flash.empty? %>
      <script type="text/javascript">
          <% flash.each do |f| %>
              <% type = f[0].to_s.gsub('alert', 'error').gsub('notice', 'info') %>
              toastr['<%= type %>']('<%= f[1] %>', '', {"closeButton": true, "debug": false, "positionClass": "toast-top-center", "onclick": null, "showDuration": "300", "hideDuration": "1000", "timeOut": "8000", "extendedTimeOut": "1000", "showEasing": "swing", "hideEasing": "linear", "showMethod": "fadeIn", "hideMethod": "fadeOut" });
          <% end %>
      </script>
	    <% end %>

      <%= yield %>


  </div>
  </body>
</html>
