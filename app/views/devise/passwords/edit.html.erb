<div class="col-md-6 col-md-offset-3 panel panel-default devise-bs">
  <%= bootstrap_devise_error_messages! %>
</br>
<% if User.with_reset_password_token(resource.reset_password_token).sign_in_count == 0 %>
  <h4 class="alert alert-success text-center"> Welcome to Grocer! </h4>
  <p class="text-center">Please create a password for your account</p>
<% else %>
<h4 class="text-center"> Reset Your Password </h4>
<% end %>
  <div class="panel-body">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, role: 'form' }) do |f| %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <%= f.label :password, 'Choose password' %>
        <%= f.password_field :password, autofocus: true, class: 'form-control'  %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, 'Confirm password' %>
        <%= f.password_field :password_confirmation, class: 'form-control'  %>
      </div>
      <%= f.submit 'Submit password', class: 'btn btn-primary btn-block' %>
    <% end %>
  </br>
</div>
</div>
