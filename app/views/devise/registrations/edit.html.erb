<%= bootstrap_devise_error_messages! %>

<div class="col-md-6 col-md-offset-3 panel panel-default devise-bs">
  <div class="panel-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <h4 class="text-center">Change Your Password</h4>
      <div class="form-group">
        <%= f.label 'New Password' %>
        <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label 'New Password Confirmation' %>
        <%= f.password_field :password_confirmation, class: 'form-control'  %>
      </div>
      <div class="form-group">
        <%= f.label 'Current Password' %>
        <%= f.password_field :current_password, class: 'form-control' %>
        <%= f.hidden_field :changed_password, value: (current_user.changed_password + 1) %>
      </div>
      <%= f.submit t('.update', default: 'Update'), class: 'btn btn-primary btn-block' %>
    <% end %>
    <hr />
    <h5 class="text-center"><%= link_to "Sign out", destroy_user_session_path, method: "delete"  %></h5>
  </div>
</div>
